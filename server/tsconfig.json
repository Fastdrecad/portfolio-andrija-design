{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src", // Since the tsconfig is inside "server", we point rootDir to the current folder
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true // Generates .d.ts files for TypeScript definitions
  },
  "include": ["src/**/*.ts"], // Include all TypeScript files in the current folder and subfolders
  "exclude": ["node_modules", "**/*.spec.ts", "dist"]
}
