{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./", // Since the tsconfig is inside "server", we point rootDir to the current folder
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./**/*.ts"], // Include all TypeScript files in the current folder and subfolders
  "exclude": ["node_modules", "**/*.spec.ts"]
}
